%h1 Listing polls

%table
  %thead
    %tr
      %th Source
      %th Poller
      %th Date
      %th Population
      %th
      %th
      %th
      
  %tbody
    - @polls.each do |poll|
      %tr
        %td= poll.source
        %td= poll.poller
        %td= poll.date
        %td= poll.population
        %td= link_to 'Show', poll
        %td= link_to 'Edit', edit_poll_path(poll)
        %td= link_to 'Destroy', poll, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

